---
import Section from "../Section.astro";
import GitHub from "@/icons/GitHub.astro";

import { projects }from '@cv'
---

<Section title="Proyectos">
    <ul>
        {
            projects.map(({ url, description, highlights, name, isActive, github }) => {
                return (
                    <li>
                        <article>
                            <header>
                                <h3>
                                    <a href={url} title={`Ver el proyecto ${name}`}></a>
                                    {isActive && <span>&bull;</span>}
                                    {github && <a class="github-code-link" href={github} target="_blank" title={`Ver cÃ³digo del proyecto ${name}`}><GitHub /></a>}
                                </h3>
                                <p>{description}</p>
                            </header>
                            <footer>{
                                highlights.map((highlight) => {
                                    return <span>{highlight}</span>
                                })
                            }</footer>
                        </article>
                    </li>
                )
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin-inline: -16px;
    }
    article {
        border-radius: 8px;
        border: 1px solid #f2f2f2;
        gap: 16px;
        display: flex;
        flex-direction: column;
        padding: 16px;
        height: 100%;
    }
    article header {
        flex: 1;
    }
    article
</style>