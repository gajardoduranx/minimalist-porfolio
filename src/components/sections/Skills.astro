---
import Section from "../Section.astro";
import { skills } from '@cv'
---

<Section title="Habilidades">
    <ul>
        {
            skills.map(({ name }) => (
                <li>
                    <span>{name}</span>
                </li>
            ))
        }
    </ul>
</Section>

<style>
    ul {
        display: inline-block;
        gap: 10px;
        flex-wrap: wrap;
    }
    li {
        /* border-radius: 6px; */
        /* background: #bcdaf3; */
        color: #555;
        font-size: .8rem;
        font-weight: 600;
        padding: .3rem .8rem;
    }
</style>